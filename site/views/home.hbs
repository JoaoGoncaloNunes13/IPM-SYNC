<div class="home-page">
    <aside class="sidebar" id="sidebar">
        <button class="sidebar-toggle" id="sidebarToggle">☰</button>

        <h2>Projetos</h2>

        <ul class="project-list">
            {{#each projects}}
                <li class="project-bubble" title="{{this.name}}" onclick="openProject('{{this.id}}')">
                    <span>{{lookup this.name 0}}</span>
                </li>
            {{/each}}
            <li class="project-bubble new-project" onclick="openCreateServerModal()" title="Criar novo projeto">+</li>
        </ul>
    </aside>

    <!-- Modal de criação de servidor -->
    {{> createServer}}

    <!-- Scripts -->
    <script type="module" src="/js/createServer.js"></script>

    

    <script>
        function openProject(serveId) {
            window.location.href = `/servers/${serveId}`;
        }

    </script>

    <!-- Conteúdo central -->
    <main class="main-content">
        <section class="calendar-container">
            <h2>Calendário</h2>
            <div id="calendar"></div>
        </section>



        <!-- Sessões de estudo -->
        <section class="study-sessions">
            <h2>Adicionar Sessão de Estudo</h2>
            <form id="studySessionForm" action="/createStudySession" method="POST">
                <input type="text" name="title" placeholder="Título da Sessão" required>
                <input type="date" name="date" required>
                <input type="date" name="endDate">
                <input type="time" name="time">
                <input type="number" name="duration" placeholder="Duração (minutos)">
                <input type="color" name="color" value="#3b82f6" title="Escolhe uma cor para a sessão">
                <button type="submit">Criar Sessão</button>
            </form>
        </section>
    </main>
</div>
