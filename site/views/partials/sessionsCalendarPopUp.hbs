<div id="dayPopup" class="popup" style="display:none">
    <div class="popup-content">
        <h3>Sessões do dia</h3>
        <ul id="sessionList"></ul>
        <button id="closePopup" class="close-btn">Fechar</button>
    </div>
</div>

<style>
    .popup {
        position: fixed;
        inset: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        background: rgba(0,0,0,0.5);
        backdrop-filter: blur(6px);
        z-index: 9999;
    }

    .popup-content {
        background: #fff;
        padding: 30px;
        border-radius: 16px;
        min-width: 350px;
        max-width: 90%;
        font-family: "Segoe UI", sans-serif;
    }

    .popup-content h3 {
        margin-top: 0;
        margin-bottom: 20px;
        font-size: 1.5rem;
        font-weight: 700;
    }

    .session-item {
        background: #f0f4ff;
        border-radius: 12px;
        padding: 15px 20px;
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .session-item span {
        font-size: 0.95rem;
        color: #1f2937;
    }

    .session-item .meta {
        color: #4b5563;
    }

    .close-btn {
        margin-top: 20px;
        background: #3b82f6;
        color: white;
        border: none;
        padding: 12px 22px;
        border-radius: 12px;
        cursor: pointer;
    }
    .close-btn:hover {
        background: #2563eb;
    }
</style>

<script>
    // Fechar popup
    document.getElementById('closePopup').addEventListener('click', () => {
        document.getElementById('dayPopup').style.display = 'none';
    });

    // Abrir popup e popular sessões
    function openPopup(sessions) {
        const list = document.getElementById('sessionList');
        list.innerHTML = '';

        if (!sessions || sessions.length === 0) {
            list.innerHTML = '<li>Nenhuma sessão neste dia</li>';
            document.getElementById('dayPopup').style.display = 'flex';
            return;
        }

        sessions.forEach(s => {
            const li = document.createElement('li');
            li.classList.add('session-item');
            li.innerHTML = `
            <span><strong>Título:</strong> ${s.title}</span>
            <span class="meta"><strong>Data:</strong> ${s.date}</span>
            <span class="meta"><strong>Hora:</strong> ${s.time || 'Não definido'}</span>
            <span class="meta"><strong>Duração:</strong> ${s.duration ? s.duration + ' min' : 'Não definido'}</span>
        `;
            list.appendChild(li);
        });

        document.getElementById('dayPopup').style.display = 'flex';
    }

    // EXEMPLO: popular com várias sessões
